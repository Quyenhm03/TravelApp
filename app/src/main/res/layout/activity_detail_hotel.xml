<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:orientation="vertical"
    android:padding="16dp">


    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="start"
        android:padding="4dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Quay lại" />

    <!-- Hotel Images -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/imageHotel"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_image" />

    </LinearLayout>

    <!-- Hotel Name -->
    <TextView
        android:id="@+id/textHotelName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingBottom="8dp"
        android:text="Hotel Name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Hotel Rating -->
    <TextView
        android:id="@+id/textHotelRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingBottom="8dp"
        android:text="Rating: 5.0"
        android:textSize="16sp" />

    <!-- Hotel Location -->
    <TextView
        android:id="@+id/textHotelLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingBottom="8dp"
        android:text="Location: Hà Nội"
        android:textSize="16sp" />

    <!-- Hotel Website -->
    <TextView
        android:id="@+id/textHotelWebsite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:autoLink="web"
        android:paddingBottom="8dp"
        android:text="Website: https://example.com"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="16sp" />

    <!-- Hotel Phone -->
    <TextView
        android:id="@+id/textHotelPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:autoLink="phone"
        android:paddingBottom="8dp"
        android:text="Phone: 0123456789"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="16sp" />

    <!-- Check-in Time -->
    <TextView
        android:id="@+id/textCheckInTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingBottom="8dp"
        android:text="Check-in: 14:00"
        android:textSize="16sp" />

    <!-- Check-out Time -->
    <TextView
        android:id="@+id/textCheckOutTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingBottom="16dp"
        android:text="Check-out: 12:00"
        android:textSize="16sp" />


    <Button
        android:id="@+id/buttonConfirmBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:padding="12dp"
        android:text="Xác nhận"
        android:textColor="@android:color/white" />

</LinearLayout>