<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:background="@color/orange">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/back"
            android:textAllCaps="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:text="Thanh toán"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corner_top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="25dp"
                android:background="#EEEFEF"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ln_payment_departure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_departure_coach_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nam Quỳnh Anh"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/txt_departure_date_payment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:textColor="@color/black"
                                android:text="01/03/2025"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="20dp"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2.5"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt_departure_time_payment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="20:00"
                                    android:textColor="@color/black"
                                    android:textSize="30sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/txt_departure_city_payment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Hà Nội"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/txt_departure_station_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Bến xe Nước Ngầm"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/circle_shape"/>

                                <View
                                    android:layout_width="35dp"
                                    android:layout_height="1dp"
                                    android:background="@drawable/line_shape"/>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/orange"
                                    app:cardCornerRadius="23dp"
                                    app:cardMaxElevation="12dp"
                                    app:cardPreventCornerOverlap="true">

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="25dp"
                                        android:src="@drawable/bus_white"/>

                                </androidx.cardview.widget.CardView>
                                <View
                                    android:layout_width="35dp"
                                    android:layout_height="1dp"
                                    android:background="@drawable/line_shape"/>

                                <View
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/circle_shape"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2.5"
                                android:gravity="end"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt_arrival_time_payment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="21:40"
                                    android:textSize="30sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/txt_arrival_city_payment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:gravity="end"
                                    android:text="TP Vinh"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/txt_arrival_station_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:gravity="end"
                                    android:text="Bến xe Vinh"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Biển kiểm soát"
                                    android:textColor="#868686"
                                    android:textStyle="bold"
                                    android:textSize="15sp"/>

                                <TextView
                                    android:id="@+id/txt_departure_coach_payment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="29D1-123.45"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5dp"
                                    android:textSize="16sp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ghế"
                                    android:textColor="#868686"
                                    android:textStyle="bold"
                                    android:textSize="15sp"/>

                                <TextView
                                    android:id="@+id/txt_departure_seat_payment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2B"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="5dp"
                                    android:textSize="16sp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/line_shape"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ln_payment_return"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_return_coach_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hoàng Long"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/txt_return_date_payment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:textColor="@color/black"
                                android:text="03/03/2025"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="20dp"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2.5"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt_departure_time_return_payment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="08:00"
                                    android:textSize="30sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/txt_departure_city_return_payment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="TP Vinh"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/txt_departure_station_name_return"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Bến xe Vinh"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/circle_shape"/>

                                <View
                                    android:layout_width="35dp"
                                    android:layout_height="1dp"
                                    android:background="@drawable/line_shape"/>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/orange"
                                    app:cardCornerRadius="23dp"
                                    app:cardMaxElevation="12dp"
                                    app:cardPreventCornerOverlap="true">

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="25dp"
                                        android:src="@drawable/bus_white"/>

                                </androidx.cardview.widget.CardView>
                                <View
                                    android:layout_width="35dp"
                                    android:layout_height="1dp"
                                    android:background="@drawable/line_shape"/>

                                <View
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/circle_shape"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2.5"
                                android:gravity="end"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt_arrival_time_return_payment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="09:40"
                                    android:textColor="@color/black"
                                    android:textSize="30sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/txt_arrival_city_return_payment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:gravity="end"
                                    android:text="Hà Nội"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/txt_arrival_station_name_return"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:gravity="end"
                                    android:text="Bến xe Nước Ngầm"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Biển kiểm soát"
                                    android:textColor="#868686"
                                    android:textStyle="bold"
                                    android:textSize="15sp"/>

                                <TextView
                                    android:id="@+id/txt_return_coach_payment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="29D1-678.90"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5dp"
                                    android:textSize="16sp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ghế"
                                    android:textColor="#868686"
                                    android:textStyle="bold"
                                    android:textSize="15sp"/>

                                <TextView
                                    android:id="@+id/txt_return_seat_payment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2B"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5dp"
                                    android:textSize="16sp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/line_shape"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Tổng"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/txt_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="end"
                            android:text="635.000 VNĐ"
                            android:textStyle="bold"
                            android:textColor="@color/orange"
                            android:textSize="20sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:cardCornerRadius="8dp"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_payment"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Thanh toán với ZaloPay"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@color/orange"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>