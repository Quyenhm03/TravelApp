<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Header -->
    <TextView
        android:background="@android:color/holo_orange_dark"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:text="Thanh toán"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />


    <LinearLayout
        android:background="@android:color/white"
        android:elevation="4dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="16dp">


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/txtCustomerName"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="Nguyen Van A"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtBookingDate"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="01/03/2025"
                android:textSize="16sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/txtHotelName"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingBottom="8dp"
            android:text="Metropole Hotel"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Ngày nhận"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtCheckInDate"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:text="1/3/2025"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Ngày trả"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtCheckOutDate"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:text="3/3/2025"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtRoomType"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingBottom="8dp"
            android:text="Phòng: VIP1234"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtTotalAmount"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Tổng: 1,905,000 VNĐ"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:background="@android:color/white"
        android:elevation="4dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingBottom="8dp"
            android:text="Số thẻ"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:background="@android:drawable/edit_text"
            android:hint="5300 0000 0000 0000"
            android:id="@+id/edtCardNumber"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:maxLength="19"
            android:padding="8dp"
            android:textSize="16sp" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:paddingBottom="8dp"
            android:text="Tên thẻ"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:background="@android:drawable/edit_text"
            android:hint="Husanain"
            android:id="@+id/edtCardHolderName"
            android:inputType="textPersonName"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:textSize="16sp" />


        <TextView
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:paddingBottom="8dp"
            android:text="Hiệu lực đến"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:background="@android:drawable/edit_text"
            android:hint="dd/mm/yyyy"
            android:id="@+id/edtExpiryDate"
            android:inputType="date"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:textSize="16sp" />


        <LinearLayout
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingTop="16dp">

            <ImageView
                android:contentDescription="Visa"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:src="@drawable/ic_zalopay" />

            <ImageView
                android:contentDescription="PayPal"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_width="40dp"
                android:src="@drawable/ic_momo" />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:backgroundTint="@android:color/holo_orange_dark"
        android:id="@+id/btnConfirmPayment"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:text="Xác nhận"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</LinearLayout>